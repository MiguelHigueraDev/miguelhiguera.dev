---
import '@fontsource-variable/epilogue'
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    </head>
    <body class="p-4 max-w-[1200px] mx-auto bg-neutral-900">
        <slot />
    </body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	::selection {
		color: black;
		background: rgb(166, 51, 254);
	}
	::-moz-selection {
		color: black;
		background: rgb(166, 51, 254);
	}
</style>