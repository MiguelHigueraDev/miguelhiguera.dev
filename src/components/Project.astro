---
interface Project {
    name: string,
    description: string,
    technologies: Technology[],
    liveUrl: string,
    repoUrl: string,
    image: string
}

interface Technology {
    name: string
}
const { name, description, technologies, liveUrl, repoUrl, image } = Astro.props
---

<li class="text-gray-300 border-2 p-4 border-purple-400 rounded-xl flex flex-col justify-between">
    <div>
        <img src={image} alt={name} class="w-full h-auto rounded-xl mb-3"/>
        <div class="flex gap-2">
            <h3 class="text-xl font-bold text-purple-500">{name}</h3>
            {liveUrl && <a href={liveUrl} target="_blank" rel="noopener noreferrer"><img src="/external.svg" aria-label={`Visita ${name}`} class="w-6 h-6" alt="" /></a>}
            {repoUrl && <a href={repoUrl} target="_blank" rel="noopener noreferrer"><img src="/github.svg" aria-label={`Visitar repositorio de Github de ${name}`} class="w-6 h-6 p-0.5" alt="" /></a>}
        </div>
        <p class="mt-0.5">{description}</p>
        <ul class="flex gap-3 flex-wrap self-end mt-3 flex-grow">
    </div>
    <ul class="flex flex-wrap gap-3">
        { technologies.map(tech => <li class="px-3 select-none py-1 bg-neutral-800 rounded-xl">{tech}</li>) }
    </ul>
    
</li>
